<Ui xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="DataProvider.lua"/>
	<Script file="MerchantUI.lua"/>

	<Button name="PlumberMerchantUIListButtonTemplate" virtual="true">
		<Size x="336" y="48"/>
		<Layers>
			<Layer level="OVERLAY" textureSubLevel="0">
				<Texture parentKey="Icon">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="24" y="0"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="IconMask" file="Interface\AddOns\Plumber\Art\BasicShape\Mask-Chamfer" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Icon"/>
					</MaskedTextures>
				</MaskTexture>
				<FontString parentKey="Label" inherits="GameFontNormal" justifyH="LEFT" spacing="2" maxLines="2">
					<Size x="216" y="38"/>	<!--  width-120  -->
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="64" y="0"/>
					</Anchors>
				</FontString>
				<Texture parentKey="RightIcon" hidden="true">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" x="-24" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" setAllPoints="true" hidden="true">
					<Color r="0" g="0" b="0" a="0.8"/>
				</Texture>
			</Layer>
		</Layers>
	</Button>
</Ui>